<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_Top_up"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_Top_up_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tx_69_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="6dp"
                        android:text="@string/app_name2"
                        android:textColor="@color/button"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tx_Hack_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name3"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_Top_up_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:gravity="right|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent"
                        android:gravity="right|bottom"
                        android:padding="4dp"
                        android:text="App Version :"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_version_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:gravity="right|bottom"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="1.0"
                        android:textColor="@color/button"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/cornertop"
                    android:layout_width="228.0dip"
                    android:paddingStart="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="16dp"
                    android:layout_height="21.0dip"
                    android:text="RESET ESP"
                    android:fontFamily="@font/en_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/trbyno1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/savesetting"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="IMPORT"
                            android:textColor="@color/black"
                            app:icon="@drawable/file_import"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/exportsetting"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="EXPORT"
                            android:textColor="@color/black"
                            app:icon="@drawable/file_export"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/resetsetting"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="RESET"
                            android:textColor="@color/black"
                            app:icon="@drawable/file_reset"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/button" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/cornertop"
                    android:layout_width="228.0dip"
                    android:paddingStart="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="16dp"
                    android:layout_height="21.0dip"
                    android:text="Select Mode"
                    android:fontFamily="@font/en_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/trbyno1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/esp64"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="64 BIT GAME"
                            android:textColor="@color/blazered"
                            app:icon="@drawable/d64bit"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/blazered" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/esp32"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="32 BIT GAME"
                            android:textColor="@color/black"
                            app:icon="@drawable/d32bit"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/trbyno1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/system"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="System Mode"
                            android:textColor="@color/blazered"
                            app:icon="@drawable/systemmode"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/blazered" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/kernel"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="Kernel Mode"
                            android:textColor="@color/black"
                            app:icon="@drawable/kernelmode"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/black" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/trbyno1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/espsafe"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="@string/safe_"
                            android:textColor="@color/button"
                            app:icon="@drawable/safe_mode"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/espunsafe"
                            style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                            android:gravity="center"
                            android:text="@string/unsafe"
                            android:textColor="@color/black"
                            app:icon="@drawable/unsafe_mode"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/hiderecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIDE REC"
                    android:textColor="@color/button"
                    app:icon="@drawable/ic_turn"
                    app:iconTint="@color/button"
                    style="@style/Theme.CheatUIDev.MainActivity.ActionButton"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fixinstall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIX OBB"
                    android:textColor="@color/button"
                    app:icon="@drawable/fan"
                    app:iconTint="@color/button"
                    style="@style/Theme.CheatUIDev.MainActivity.ActionButton" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bypexecute"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MANUAL"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    app:backgroundTint="@color/button"
                    app:icon="@drawable/bypoff"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
