<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_Top_up"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_Top_up_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tx_69_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="6dp"
                        android:text="@string/app_name2"
                        android:textColor="@color/button"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tx_Hack_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name3"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_Top_up_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:gravity="right|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent"
                        android:gravity="right|bottom"
                        android:padding="4dp"
                        android:text="App Version :"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_version_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:gravity="right|bottom"
                        android:paddingTop="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="1.0"
                        android:textColor="@color/button"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/trbyno1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscription"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/keyexpiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null"
                            android:layout_marginStart="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/deviceInfoTextView"
                            android:text="null"
                            android:layout_marginStart="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google"
                            android:text="Licence :"
                            android:textColor="@color/gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/google"
                            android:text="null"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google"
                            android:text="@string/account_type"
                            android:textColor="@color/gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/leveluser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/google"
                            android:text="null"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4.0dip"
                android:background="@drawable/trbyno1"
                android:paddingBottom="4.0dip"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/game_icon_size_normal"
                    android:layout_height="@dimen/game_icon_size_normal"
                    android:src="@drawable/ic_fb"
                    app:shapeAppearance="@style/Theme.CheatUIDev.ShapeAppearanceOverlay.Circle" />
                <Space
                    android:layout_gravity="center_vertical"
                    android:layout_width="10.0dip"
                    android:layout_height="0.0dip" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:singleLine="true" />

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:textSize="9.0sp"
                    android:id="@+id/InstallFb"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="#FF212A3B"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/trbyno1"
                android:layout_marginTop="10dp"
                android:paddingTop="4.0dip"
                android:paddingBottom="4.0dip"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_gravity="center"
                    android:id="@+id/socialtw"
                    android:layout_width="@dimen/game_icon_size_normal"
                    android:layout_height="@dimen/game_icon_size_normal"
                    android:src="@drawable/ic_tw"
                    app:shapeAppearance="@style/Theme.CheatUIDev.ShapeAppearanceOverlay.Circle" />
                <Space
                    android:layout_gravity="center_vertical"
                    android:layout_width="10.0dip"
                    android:layout_height="0.0dip" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:id="@+id/social2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Twitter"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:singleLine="true" />

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:textSize="9.0sp"
                    android:id="@+id/InstallTwitter"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="#FF212A3B"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>



            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4.0dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/trbyno1"
                android:paddingBottom="4.0dip"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_gravity="center"
                    android:id="@+id/socialgplay"
                    android:layout_width="@dimen/game_icon_size_normal"
                    android:layout_height="@dimen/game_icon_size_normal"
                    android:src="@drawable/gplay"
                    app:shapeAppearance="@style/Theme.CheatUIDev.ShapeAppearanceOverlay.Circle" />
                <Space
                    android:layout_gravity="center_vertical"
                    android:layout_width="10.0dip"
                    android:layout_height="0.0dip" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:id="@+id/social3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Google Play"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:singleLine="true" />


                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:textSize="9.0sp"
                    android:id="@+id/InstallGplay"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="#FF212A3B"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>

                </LinearLayout>









</RelativeLayout>
